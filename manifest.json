{
  "manifest_version": 3,
  "name": "Twitch colors",
  "description": "Cute palette colors for Twitch light and dark theme in Chrome",
  "version": "1.0",
  "permissions": ["storage", "scripting"],
  "content_scripts": [
    {
      "matches":["https://www.twitch.tv/*" ],
      "js": ["js/theme.js"],
      "css": ["css/hue.css", "css/theme.css"]
    }
  ],
  "icons": {
    "16": "icons/16px.png",
    "32": "icons/32px.png",
    "48": "icons/48px.png",
    "128": "icons/128px.png"
  }
}