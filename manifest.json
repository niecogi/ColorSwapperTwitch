{
  "manifest_version": 3,
  "name": "Twitch colors",
  "description": "colors",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "scripting"],
  "content_scripts": [
    {
      "matches":["https://*.twitch.tv/*"],
      "css": ["hue.css", "theme.css"]
    }
  ]
}